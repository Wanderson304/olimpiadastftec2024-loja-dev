@model CRM.WebApp.Ingresso.Models.ProductViewModel

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container">
    <h2>@Model.Name</h2>
    <div class="row">
        <div class="col-md-6">
            <img class="img-fluid" src="@Model.ImageUrl" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h3>Descrição</h3>
            <p>@Model.Description</p>
            <h3>Preço</h3>
            <p>@Model.Price</p>
            <a href="@Url.Action("AddToCart", "Store", new { id = Model.ProductID })" class="btn btn-success">Adicionar ao Carrinho</a>
        </div>
    </div>
</div>